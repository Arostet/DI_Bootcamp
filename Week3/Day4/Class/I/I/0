import os

script_dir = os.path.dirname(os.path.abspath(__file__))
file_name = http://www.practicepython.org/assets/nameslist.txt
file_path = os.path.join(script_dir, file_name)

with open(file_path, 'r') as file:
    for line in file:
        print(line.strip())





